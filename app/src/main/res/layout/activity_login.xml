<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/z_choco2"
        android:scaleType="centerCrop"
        android:contentDescription="background" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/a_gradient"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/z_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/mylogo"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:id="@+id/mylogo">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@android:color/white"
                android:text="Table"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@android:color/holo_orange_light"
                android:text="Food"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mylogo"
            android:id="@+id/emailLogin"
            android:hint="Email Address"
            android:layout_marginTop="70dp"
            android:textColorHint="#efefef"
            android:textColor="#ffffff"
            android:background="@drawable/a_editbox"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailLogin"
            android:id="@+id/passLogin"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:textColorHint="#efefef"
            android:textColor="#ffffff"
            android:background="@drawable/a_editbox"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passLogin"
            android:background="@drawable/a_round_button"
            android:id="@+id/loginButton"
            android:text="Login"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/a_round_button2"
            android:layout_centerHorizontal="true"
            android:text="SignUp with E-mail"
            android:id="@+id/signUp_activity"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="true"
            android:textColor="#393939"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

    </RelativeLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_centerInParent="true"/>


</RelativeLayout>